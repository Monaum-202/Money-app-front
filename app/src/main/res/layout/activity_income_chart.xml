<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".MainActivity">

    <!-- Main Content Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IncomeChart"
        android:background="@color/light_gray">

        <!-- Toolbar and Action Buttons -->
        <LinearLayout
            android:id="@+id/toolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Toolbar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#252B36"
                android:padding="15dp"
                android:elevation="4dp">

                <ImageButton
                    android:id="@+id/buttonDrawerToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:src="@drawable/drawermenu"
                    android:contentDescription="Drawer Menu"/>

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Balance: 0.00"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Action Buttons Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#F0F0F0">

                <ImageButton
                    android:id="@+id/btn_add"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:contentDescription="Add"
                    android:padding="8dp"
                    android:src="@drawable/add"
                    android:layout_margin="2dp"
                    android:background="@drawable/chart_background"/>

                <ImageButton
                    android:id="@+id/btn_remove"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/chart_background"            android:contentDescription="Remove"
                    android:layout_margin="2dp"
                    android:padding="8dp"
                    android:src="@drawable/remove" />

                <ImageButton
                    android:id="@+id/btn_transfer"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/chart_background"            android:contentDescription="Remove"
                    android:layout_margin="2dp"
                    android:padding="8dp"
                    android:src="@drawable/transfer" />

                <ImageButton
                    android:id="@+id/btn_loan"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/chart_background"            android:contentDescription="Remove"
                    android:layout_margin="2dp"
                    android:padding="8dp"
                    android:src="@drawable/loan" />

                <ImageButton
                    android:id="@+id/btn_refresh"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/chart_background"            android:contentDescription="Remove"
                    android:layout_margin="2dp"
                    android:padding="8dp"
                    android:src="@drawable/refresh" />

            </LinearLayout>
        </LinearLayout>

        <!-- Spinner to Select Month -->

        <!-- Pie Chart -->

        <Spinner
            android:id="@+id/spinnerMonth"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="325dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/spinner_background"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/piChart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarLayout" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piChart"
            android:layout_width="395dp"
            android:layout_height="380dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="156dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerMonth" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#252B36"
        app:itemTextColor="@color/white"
        app:menu="@menu/drawer_items"
        app:headerLayout="@layout/drawer_header"
        app:itemIconPadding="30dp"
        android:layout_gravity="start"/>

</androidx.drawerlayout.widget.DrawerLayout>
